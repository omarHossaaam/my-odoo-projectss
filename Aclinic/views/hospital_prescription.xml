<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action -->
    <record id="hospital_prescription_action" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="res_model">hospital.prescription</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="hospital_prescription_menu"
              name="Prescriptions"
              parent="hospital_root_menu"
              action="hospital_prescription_action"
              sequence="50"/>

    <!-- Tree View -->
    <record id="view_hospital_prescription_tree" model="ir.ui.view">
        <field name="name">hospital.prescription.tree</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="treatment_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_prescription_form" model="ir.ui.view">
        <field name="name">hospital.prescription.form</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="treatment_id"/>
                        <field name="date"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>

                    <notebook>
                        <page string="Medicines">
                            <field name="medicine_line_ids">
                                <tree editable="bottom">
                                    <field name="medicine_name"/>
                                    <field name="dosage"/>
                                    <field name="duration"/>
                                    <field name="instructions"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm"/>
                    <button string="Done" type="object" name="action_done"/>
                    <button string="Reset to Draft" type="object" name="action_reset_to_draft"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>