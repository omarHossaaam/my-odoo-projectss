<odoo>
    <!-- Tree view -->
    <record id="hospital_treatment_tree_view" model="ir.ui.view">
        <field name="name">hospital.treatment.tree</field>
        <field name="model">hospital.treatment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="treatment_date"/>
                <field name="cost"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="hospital_treatment_form_view" model="ir.ui.view">
        <field name="name">hospital.treatment.form</field>
        <field name="model">hospital.treatment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Treatment Info">
                        <field name="name"/>
                        <field name="description"/>
                        <field name="treatment_date"/>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="cost"/>
                        <field name="state"/>
                    </group>
                </sheet>
              <footer>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_done"
                            string="Done"
                            type="object"
                            class="btn-success"
                            invisible="state != 'confirmed'"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="hospital_treatment_search_view" model="ir.ui.view">
        <field name="name">hospital.treatment.search</field>
        <field name="model">hospital.treatment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="hospital_treatment_action" model="ir.actions.act_window">
        <field name="name">Treatments</field>
        <field name="res_model">hospital.treatment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="hospital_treatment_menu"
              name="Treatments"
              parent="hospital_root_menu"
              action="hospital_treatment_action"
              sequence="20"/>
</odoo>
