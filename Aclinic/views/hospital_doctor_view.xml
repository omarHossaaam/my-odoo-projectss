<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors">
                <field name="ref" />
                <field name="name"/>
                <field name="specialization"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="active"/>
            </tree>
        </field>
    </record>


    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <group>
                        <field name="ref" readonly="1"/>
                        <field name="name" />
                        <field name="specialization"/>
                    </group>
                    <group>
                        <field name="phone"/>
                        <field name="mobile"/>
                        <field name="email"/>
                        <field name="partner_id"/>
                        <field name="user_id"/>
                    </group>
                    <group>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Patients">
                            <field name="patient_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="age"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Appointments">
                            <field name="appointment_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <!-- <field name="date"/> -->
                                    <field name="patient_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="note" nolabel="1" />
                        </page>
                    </notebook>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_open_patients" string="Open Patients" class="btn-primary"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hospital.doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="specialization"/>
                <filter name="active_doctors" string="Active" domain="[('active','=',True)]"/>
            </search>
        </field>
    </record>


    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create a doctor record</p>
        </field>
    </record>

    <menuitem id="menu_hospital_root" name="Hospital" sequence="10"/>
    <menuitem id="menu_hospital_doctors" name="Doctors" parent="menu_hospital_root" action="action_hospital_doctor" sequence="10"/>

</odoo>