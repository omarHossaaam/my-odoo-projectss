<odoo>

    <record id="view_hospital_room_tree" model="ir.ui.view">
        <field name="name">hospital.room.tree</field>
        <field name="model">hospital.room</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="room_type"/>
                <field name="capacity"/>
                <field name="occupied_beds"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="view_hospital_room_form" model="ir.ui.view">
        <field name="name">hospital.room.form</field>
        <field name="model">hospital.room</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="available,occupied,maintenance"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="room_type"/>
                        <field name="capacity"/>
                        <field name="occupied_beds" readonly="1"/>
                        <field name="notes"/>
                    </group>
                    <notebook>
                        <page string="Appointments">
                            <field name="appointment_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="patient_id"/>
                                    <field name="doctor_id"/>
                                    <field name="appointment_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="hospital_room_action" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">hospital.room</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="hospital_room_menu"
              name="Rooms"
              parent="hospital_root_menu"
              action="hospital_room_action"/>
</odoo>