<odoo>
    <record id="view_owner_tree" model="ir.ui.view">
        <field name="name">owner tree</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>
    <record id="view_owner_form" model="ir.ui.view">
        <field name="name">owner form</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div> 
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="address"/>
                        <field name="city"/>
                    </group>
                    <group>
                        <field name="property_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record> 
    <record id="owner_action" model="ir.actions.act_window">
        <field name="name">Owner</field>
        <field name="res_model">owner</field>
        <field name="view_mode">tree,form</field>
    </record> 
    <menuitem id="owner_menu" 
name="Owner" 
parent="configuration_menu" 
action="owner_action"/>
  
  


</odoo>